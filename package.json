{
  "name": "behzad-hse",
  "version": "1.1.0",
  "description": "Behzad HSE - Electron app with FMEA risk assessment, PPE matrix, SOP & Emergency Plan generator",
  "main": "electron/main.js",
  "author": "Behzad",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "start": "cross-env NODE_ENV=production electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.behzad.hse",
    "productName": "Behzad HSE",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}